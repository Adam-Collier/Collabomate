div.header
  ul
    li
      a(href='/') Collabomate
  ul
    if user
      li
        if user.picture
          img.avatar(src=user.picture)
        else
          img.avatar(src=user.gravatar)
        | <span> #{user.name || user.email || user.id} </span>
      li
        a(href='/profile') Profile
      li
        a(href='/logout') Logout
    else
      if path === "/signup"
      else
        li
          label(for="login") Login
          if messages.error
            input#login(type="checkbox" checked)
          else
            input#login(type="checkbox")
          div.login
                if messages.error
                  div.text-danger(role='alert')
                    for error in messages.error
                      div= error.msg
                if messages.success
                  div.text-success(role='alert')
                    for success in messages.success
                      div= success.msg
                //- if messages.info
                //-   div.text-info(role='alert')
                //-     for info in messages.info
                //-       div= info.msg
                div.github
                  a(href='/auth/github') sign in with github
